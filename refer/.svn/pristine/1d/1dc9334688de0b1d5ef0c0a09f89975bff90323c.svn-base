    public String extractOne(String str, String pattern,Map<String,String> map) {
        Pattern p = Pattern.compile(pattern);
        Matcher m = p.matcher(str);

        while (m.find()) {
            String s=m.group();
            String key = s.split("\\[\\'")[1].split("\\'\\]")[0];
            String value = s.split("= \\'")[1].split("\\'")[0];
            map.put(key,value);
        }
        return null;
    }

